<%= render "partials/sidebar", locals: {current_user: current_user, page: 3} %>
<%= render "partials/headerbar", locals: {current_user: current_user, page: 3} %>
<%= render "partials/chat_sidebar", locals: {current_user: current_user, page: 3} %>
<div class="content-wrap">
    <!-- main page content. the place to put widgets in. usually consists of .row > .col-md-* > .widget.  -->
    <div class="attachPost"></div>
    <main id="content" class="content" role="main">
        <ol class="breadcrumb">
            <li>Home</li>
            <li class="active">Forum</li>
        </ol>
        <div class="head-container row">
            <h1 class="page-title header-light col-md-2" id="documents-header">Forum</h1>
        </div>
        <section class="widget">
            <header>
                <h4>All <span class="fw-semi-bold">Posts</span></h4>
                <div class="widget-controls">
                    <a data-widgster="expand" title="Expand" href="#"><i class="glyphicon glyphicon-chevron-up"></i></a>
                    <a data-widgster="collapse" title="Collapse" href="#"><i class="glyphicon glyphicon-chevron-down"></i></a>
                    <a data-widgster="close" title="Close" href="#"><i class="glyphicon glyphicon-remove"></i></a>
                </div>
            </header>

            <div class="widget-body">
                <div class="mt">
                    <table id="datatable-table" class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Title</th>
                            <th class="no-sort hidden-xs">Summary</th>
                            <th class="hidden-xs">Date</th>
                            <th class="no-sort">Replies</th>
                            <th class="no-sort">User</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% @posts.each do |post| %>
                            <tr>
                            <td><span class="fw-semi-bold"><a class="forum-post-link" href="/forum/posts/<%=post.id%>"><%= post.title %></a></span>
                            </td>
                            <td class="hidden-xs">
                                <small>
                                    <%= truncate(post.body, length: 50) %>
                                </small>
                            </td>
                            <td class="hidden-xs">
                                <%= distance_of_time_in_words(post.created_at, Time.now) %></td>
                            <td class="width-150">
                                <%= post.comments.length %>
                            </td>
                            <td class="width-150">
                                <%= post.user.username %>
                            </td>
                        </tr>
                        <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </main>
</div>
<%= javascript_include_tag 'showForumPost' %>
<!-- The Loader. Is shown when pjax happens -->
<div class="loader-wrap hiding hide">
    <i class="fa fa-circle-o-notch fa-spin-fast"></i>
</div>