<!--
  Main sidebar seen on the left. may be static or collapsing depending on selected state.

    * Collapsing - navigation automatically collapse when mouse leaves it and expand when enters.
    * Static - stays always open.
-->
<nav id="sidebar" class="sidebar" role="navigation">
    <!-- need this .js class to initiate slimscroll -->
    <div class="js-sidebar-content">
        <header class="logo hidden-xs">
            <a href=<%= root_path %>>STEM <span id="side-hide">PREP</span></a>
        </header>
        <!-- seems like lots of recent admin template have this feature of user info in the sidebar.
             looks good, so adding it and enhancing with notifications -->
        <div class="sidebar-status visible-xs">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            </a>
            <!-- #notifications-dropdown-menu goes here when screen collapsed to xs or sm -->
        </div>
        <!-- main notification links are placed inside of .sidebar-nav -->
        <ul class="sidebar-nav">
            <li <%= "class=active" if locals[:page] == 1%>>
                <a href="/users/<%= current_user.id %>">
                    <span class="icon">
                        <i class="glyphicon glyphicon-home"></i>
                    </span>
                    Home
                </a>
            </li>
            <li id="sideProfile" <%= "class=active" if locals[:page] == 2 %>>
                <a href="/users/<%= locals[:current_user].id %>/profile">
                    <span class="icon">
                        <i class="glyphicon glyphicon-user"></i>
                    </span>
                    My Profile
                </a>
            </li>
            <li <%= "class=active" if locals[:page] == 3 %>>
                <a href="/users/<%= locals[:current_user].id %>/documents">
                    <span class="icon">
                        <i class="glyphicon glyphicon-hdd"></i>
                    </span>
                    My Documents
                </a>
            </li>

            <li <%= "class=active" if locals[:page] == 4 %>>
                <a href="/forum">
                    <span class="icon">
                        <i class="fa fa-comment"></i>
                    </span>
                    Forum
                </a>
            </li>

            <li <%= "class=active" if locals[:page] == 5 %>>
                <a href="/users">
                    <span class="icon">
                        <i class="glyphicon glyphicon-search"></i>
                    </span>
                    Search Students
                </a>
            </li>
        </ul>
</nav>