<main id="post-content" class="content" role="main">
    <ol class="breadcrumb">
        <li>Home</li>
        <li class="active">Post</li>
    </ol>

    <section class="widget">
        <header class="row">
            <h5 class="col-md-10"><%= @post.title %></h5>
            <p class="col-md-9"><%= @post.body %></p>
        </header>
        <div class="widget-body">
        </div>
    </section>

    <section class="widget">
        <header>
            <h4>Replies</h4>
        </header>
        <div class="widget-body">
            <div class="mt">
                <table id="datatable-table" class="table table-striped table-hover">
                    <tbody>
                    <% @post.comments.each do |comment| %>
                      <tr>
                        <td>from: <%= comment.user.username %></td>
                        <td><%= comment.body %></td>
                      </tr>
                    <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</main>