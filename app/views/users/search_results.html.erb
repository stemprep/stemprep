<header>
    <h4>Results for <span class="fw-semi-bold"><%= @user_search %></span></h4>
</header>
<div class="widget-body">
    <div class="mt">
        <table id="datatable-table" class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Name</th>
                <th class="no-sort hidden-xs">Grade</th>
                <th class="hidden-xs">Major</th>
            </tr>
            </thead>
            <tbody>

          <% @results.each do |user| %>
            <tr>
              <td>
                <a href="/users/<%= user.id %>/profile"><span class="fw-semi-bold">
                  <%= user.first_name + " " + user.last_name%>
                  </a>
                </span>
              </td>
              <td class="hidden-xs">
                <%= user.grade %>
              </td>
              <td class="hidden-xs">
                <%= user.major %>
              </td>
            </tr>
          <% end %>
            </tbody>
        </table>
    </div>
</div>