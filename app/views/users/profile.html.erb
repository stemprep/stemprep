<%= render "partials/sidebar", locals: {current_user: current_user, page: 2} %>
<%= render "partials/headerbar", locals: {current_user: current_user, page: 2} %>
<%= render "partials/chat_sidebar", locals: {current_user: current_user, page: 2} %>
<div class="content-wrap">
    <!-- main page content. the place to put widgets in. usually consists of .row > .col-md-* > .widget.  -->
    <main id="content" class="content" role="main">
        <ol class="breadcrumb">
            <li>Home</li>
            <li class="active">Profile</li>
        </ol>
        <h1 class="page-title light-header">My Profile <%= link_to("Edit", "#", class: "btn btn-primary btn-md edit-user-profile") %>
          <%= form_for :user, class: 'edit-form' do |f| %>
        </h1>


        <div class="row">
          <div class="col-md-12 main-content">
            <section class="widget col-xs-12">
              <div class="widget-content col-xs-12">
                <%= image_tag("avatar.png", class: "profile-image col-md-2" ) %>
                <table class="table custom-table col-md-3 col-xs-12">
                  <tbody class="row">
                    <tr class="custom-row col-xs-12">
                      <td class="header-data">NAME:</td>
                      <td class="info-data" id="name-row"><%="#{current_user.first_name }" + " " "#{current_user.last_name}" %></td>
                      <td class="edit-input"><%= f.text_field :first_name %></td>
                      <td class="edit-input"><%= f.text_field :last_name %></td>
                    </tr>
                    <tr class="custom-row col-xs-12">
                      <td class="header-data">CITY/STATE:</td>
                      <td class="info-data" id="program-row"><%="#{current_user.city}"%></td>
                      <td class="edit-input"><%= f.text_field :city %></td>
                    </tr>
                    <tr class="custom-row col-xs-12">
                      <td class="header-data" id="home-town-row">GRADE:</td>
                      <td class="info-data"><%="#{current_user.grade}"%></td>
                      <td class="edit-input"><%= f.text_field :grade %></td>
                    </tr>
                  </tbody>
                </table>

                <table class="table custom-table col-md-3">
                  <tbody class="row">
                    <tr class="custom-row col-xs-12">
                      <td class="header-data" id="year-row">MAJOR:</td>
                      <td class="info-data"><%="#{current_user.major}"%></td>
                      <td class="edit-input"><%= f.text_field :major %></td>
                    </tr>
                    <tr class="custom-row col-xs-12">
                      <td class="header-data" id="building-row">BIRTHDAY:</td>
                      <td class="info-data"><%="#{current_user.birthday}"%></td>
                      <td class="edit-input"><%= f.text_field :birthday %></td>
                    </tr>
                    <tr class="custom-row edit-input col-xs-12">
                      <td class="edit-input"><%= f.submit :save, class: 'submit-edit btn btn-primary btn-md' %></td>
                    </tr>
                  </tbody>
                </table>
                </form>
              </div>
            </section>
            </div>
          </div>
          <% end %>
        </main>
      </div>

<!-- The Loader. Is shown when pjax happens -->
<div class="loader-wrap hiding hide">
    <i class="fa fa-circle-o-notch fa-spin-fast"></i>
</div>